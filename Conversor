    <script>
        function converte(){
            let a = document.getElementById("a");
            let resultado = document.getElementById("resultado");
  
            let va = parseFloat(a.value);
            let vr = va*1.61;
  
            resultado.textContent = vr;
            mph.textContent = va;
        }
    </script>

    <head>
        <meta charset="utf-8" />
        <title>Milha - Kilometro</title>
    </head>
    <body>
        <div>
            <h1>Conversor de mph para kph</h1>
            <p><input type="text" id="a">mph</p>
            <p><button onclick="converte()">CONVERTER</button></p>
            <p><span id="mph">???</span> milhas/hora Ã© igual a <span id="resultado">???</span> kilometros/hora</p>
        </div>
